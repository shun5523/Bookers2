
		<div class="col-lg-4">
			<%= render 'users/list', {book: @book, user:@user} %>
		</div>

		<div class="col-lg-8">
			<h2>Books</h2>

			<table class="table">
				<thead>
					<tr><th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %></td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	