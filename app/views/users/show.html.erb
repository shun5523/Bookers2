<div class="col-lg-4">
<%= render 'users/list', book: @book, user:@user%>
</div>

<div class="col-lg-8">
<h2>Books</h2>

<table class="table">
<thead>
	<tr>
		<th>Title</th>
		<th>Opinion</th>
	</tr>
</thead>

<tbody>
	<% @user.books.each do |book| %>
	<tr>
		<td><%= link_to book.title, book_path(book) %></td>
		<td><%= book.body %></td>
	</tr>
	<% end %>

</tbody>
</table> 
</div>