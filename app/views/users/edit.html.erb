<div class="body-wrap">
  <div id="st-container" class="st-container">
    <div class="st-pusher">
      <div class="st-content">
        <div class="st-content-inner">
          <section class="slice slice-lg sct-color-1">
              <div class="container">
                  <div class="row">
                      <div class="col-md-4 col-md-offset-4">
                          <div class="form-user style-1 rounded has-shadow-1"> 
                            <div class="form-header text-center">
                                <h2 class="form-header-title">User info</h2>
                            </div>

                            <% if flash[:notice] %>
                            <div class="flash">
                              <%= flash[:notice] %>
                            </div>
                            <% end %>

                            <% if @user.errors.any? %>
                                <h3><%= @user.errors.count %>件のエラーが発生しました。</h3>
                                 <ul>
                                 <% @user.errors.full_messages.each do |message| %>
                                  <li><%= message %></li>
                                 </ul>
                                  <% end %>
                              <% end %>

                            <div class="form-body">
                            <%= form_for(@user) do |f| %>
                                <label>ProfileImage</label>
                                <%= f.attachment_field :profile_image %>


                                    <label>Name</label>
                                    <%= f.text_field :name %>
                                    <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                                <label>Intrduction</label>
                                <%= f.text_field :introduction %>



                                <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>

                            <% end %>
                          </div>

                            </div>
                          </div> 
                      </div>
                  </div>
              </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</div>